movement ProfBackAndForth{
    walk_right
    walk_in_place_faster_down
    delay_16 * 6
    walk_left
    walk_in_place_faster_down
    step_end
}
movement RivalLeavesLab{
    walk_down * 7
}
movement TurnPlayer{
    walk_in_place_faster_right
    walk_in_place_faster_down
}

