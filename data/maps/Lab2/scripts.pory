script Lab2_Intro{
    applymovement(OBJ_EVENT_ID_PLAYER, Lab2_MovePlayerUp)
    waitmovement(0)
    msgbox(Lab2_Intro_Speech, MSGBOX_DEFAULT)
    closemessage
    delay(20)
    turnobject(4, DIR_EAST)
