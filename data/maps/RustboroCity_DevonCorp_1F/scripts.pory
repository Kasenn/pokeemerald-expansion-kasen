script SetTeamLevel{
    lock
    msgbox(LevelSetIntro, MSGBOX_DEFAULT)
    message(WhichLevelToSet)
    waitmessage
    dynmultipush("Gym 1 (lvl 14)", 0)
    dynmultipush("Gym 2 (lvl 22)", 1)
    dynmultipush("Side area (lvl 24)", 2)
    dynmultipush("Story 1 (lvl 29)", 3)
    dynmultipush("Gym 3 (lvl 34)", 4)
    dynmultipush("Gym 4 (lvl 38)", 5)
    dynmultipush("Post-Gym 4 (lvl 40)", 6)
    dynmultipush("Gym 5 (lvl 45)", 7)
    dynmultipush("Cancel", 8)
    dynmultistack(23, 0, FALSE, 5, FALSE, 0, NULL)
	switch(var(VAR_RESULT)){
        case 0:
            msgbox("Team set to level 14.")
            setpartylevel(14)
        case 1:
            msgbox("Team set to level 22.")
            setpartylevel(22)
        case 2:
            msgbox("Team set to level 24.")
            setpartylevel(24)
        case 3:
            msgbox("Team set to level 29.")
            setpartylevel(29)
        case 4:
            msgbox("Team set to level 34.")
            setpartylevel(34)
        case 5:
            msgbox("Team set to level 38.")
            setpartylevel(38)
        case 6:
            msgbox("Team set to level 40.")
            setpartylevel(40)
        case 7:
            msgbox("Team set to level 45.")
            setpartylevel(45)
        case 8:
            closemessage
        case MULTI_B_PRESSED:
            closemessage
    }
    release
    end
}

