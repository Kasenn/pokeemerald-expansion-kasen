script MultiRegisterSign{
	msgbox(MultiRegisterSign_Text, MSGBOX_SIGN)
}
text MultiRegisterSign_Text{
	"Trainer Tips\p"
	"Key Items in your bag can be\n"
	"registered as SELECT for quick and\l"
	"convenient use.\p"
	"Up to 3 Key Items can be registered\n"
	"this way.\p"
	"Tapping SELECT while the select menu\n"
	"is already open causes the item to be\l"
	"used instead of activating the typical\l"
	"sort menu option."
}