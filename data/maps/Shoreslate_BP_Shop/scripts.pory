script ShoreslateShop_Man{
    faceplayer
    lockall
    msgbox(ShoreslateShop_Man_Text, MSGBOX_YESNO)
    if(var(VAR_RESULT) == TRUE){
        msgbox(ShoreslateShop_Man_TextContinued, MSGBOX_NPC)
    }
    waitmessage
    closemessage
    release
    end
}
