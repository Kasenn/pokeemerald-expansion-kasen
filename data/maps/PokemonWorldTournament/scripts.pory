script BP_Mart{
    lock
    faceplayer
    message(BP_Mart_Greetings)
    waitmessage
    bpmart(BP_Mart_Items)
    msgbox(gText_PleaseComeAgain)
    release
}

mart BP_Mart_Items{
    ITEM_GREPA_BERRY
    ITEM_MAX_POTION
    ITEM_FIRE_STONE
