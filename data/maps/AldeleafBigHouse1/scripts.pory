    msgbox(AldeleafBigHouse2_2F_OldWoman_Text, MSGBOX_DEFAULT)
    giveitem(ITEM_LAVA_COOKIE)
	goto_if_eq(VAR_RESULT, FALSE, Common_EventScript_BagIsFull)
    setflag(FLAG_RECEIVED_LAVA_COOKIE)
    waitmessage
    closemessage
