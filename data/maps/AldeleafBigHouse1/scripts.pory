script AldeleafBigHouse3_2F_Hide3FMan{
    setflag(FLAG_HIDE3FMAN)
    if(flag(FLAG_ANGEREDGUYINALDELEAF)){
        msgbox(AldeleafBigHouse3_3F_PokeBall_StayOut, MSGBOX_DEFAULT)
        waitmessage
        closemessage
        applymovement(OBJ_EVENT_ID_PLAYER, Walk1Down)
        waitmovement(0)
    }
    release
