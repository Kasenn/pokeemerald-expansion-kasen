text SampleBoxFull{
    "Too bad!\n"
	"The Sample Box is full…"
}

script Route8_MudPile{
    call(RandomizeMudRewards)
    if(var(VAR_MUD_SAMPLES) == 30){
        lock
        msgbox(ObtainedMud)
        msgbox(SampleBoxFull)
        release
        end
    }
    playse(SE_SELECT)
    waitse
    setmetatile(VAR_MUD_X, VAR_MUD_Y, 0x291, FALSE)
    special(DrawWholeMapView)
    random(10)
    switch(var(VAR_RESULT)){
        case 0:
        case 1:
        case 2:
        case 3:
        case 4:
        case 5:
            bufferstring(STR_VAR_1, "sample")
            addvar(VAR_MUD_SAMPLES, 1)
            playfanfare(MUS_OBTAIN_ITEM)
            message(ObtainedMud)
            waitfanfare
        case 6:
        case 7:
        case 8:
            bufferstring(STR_VAR_1, "samples")
            addvar(VAR_MUD_SAMPLES, 2)
            playfanfare(MUS_OBTAIN_ITEM)
            message(Obtained2Mud)
            waitfanfare
            if(var(VAR_MUD_SAMPLES) >= 30){
                setvar(VAR_MUD_SAMPLES, 30)
            }
        case 9:
            bufferstring(STR_VAR_1, "samples")
            addvar(VAR_MUD_SAMPLES, 3)
            playfanfare(MUS_OBTAIN_ITEM)
            message(Obtained3Mud)
            waitfanfare
            if(var(VAR_MUD_SAMPLES) >= 30){
                setvar(VAR_MUD_SAMPLES, 30)
            }
    }
    msgbox(PutMudAway)
    copyvar(VAR_TEMP_A, VAR_MUD_X)
    copyvar(VAR_TEMP_B, VAR_MUD_X)
    copyvar(VAR_TEMP_C, VAR_MUD_Y)
    copyvar(VAR_TEMP_D, VAR_MUD_Y)
    addvar(VAR_TEMP_A, 9)   // x+9
    subvar(VAR_TEMP_B, 9)   // x-9
    addvar(VAR_TEMP_C, 7)   // y+7
    subvar(VAR_TEMP_D, 7)   // y-7
    while(((var(VAR_MUD_X) <= VAR_TEMP_A) && (var(VAR_MUD_X) >= VAR_TEMP_B))
       && ((var(VAR_MUD_Y) <= VAR_TEMP_C) && (var(VAR_MUD_Y) >= VAR_TEMP_D))){
        call(RandomizeMudTile)
    }
    setmetatile(VAR_MUD_X, VAR_MUD_Y, 0x344, FALSE)
    special(DrawWholeMapView)
    release
    end
}

