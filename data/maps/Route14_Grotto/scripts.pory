mapscripts Route14_Grotto_MapScripts{
    MAP_SCRIPT_ON_TRANSITION: ROUTE14_Grotto_SetObject
    MAP_SCRIPT_ON_LOAD: ROUTE14_Grotto_SetObject
}

script ROUTE14_Grotto_SetObject{
    if(var(VAR_ROUTE14_GROTTO) <= 39){
        setvar(VAR_OBJ_GFX_ID_0, OBJ_EVENT_GFX_ITEM_BALL)
    }
    if(var(VAR_ROUTE14_GROTTO) >= 40){
        setvar(VAR_OBJ_GFX_ID_0, OBJ_EVENT_GFX_TRICK_HOUSE_STATUE)
    }
    end
}
script ROUTE14_GrottoInteract{
    lockall
    if(var(VAR_ROUTE14_GROTTO) <= 39){
        goto(ROUTE14_GrottoItem)
    }
    else{
        goto(ROUTE14_GrottoPokemon)
    }
    end
}

script ROUTE14_GrottoItem{
    if((var(VAR_ROUTE14_GROTTO) <= 3)){
        finditem(ITEM_GREAT_BALL)
    }
    if((var(VAR_ROUTE14_GROTTO) >= 4) && (var(VAR_ROUTE14_GROTTO) <= 7)){
        finditem(ITEM_SUPER_REPEL)
    }
    if((var(VAR_ROUTE14_GROTTO) >= 8) && (var(VAR_ROUTE14_GROTTO) <= 11)){
        finditem(ITEM_SUPER_POTION)
    }
    if((var(VAR_ROUTE14_GROTTO) >= 12) && (var(VAR_ROUTE14_GROTTO) <= 15)){
        finditem(ITEM_ULTRA_BALL)
    }
    if((var(VAR_ROUTE14_GROTTO) >= 16) && (var(VAR_ROUTE14_GROTTO) <= 19)){
        finditem(ITEM_FULL_HEAL)
    }
    if((var(VAR_ROUTE14_GROTTO) >= 20) && (var(VAR_ROUTE14_GROTTO) <= 23)){
        finditem(ITEM_HYPER_POTION)
    }
    if((var(VAR_ROUTE14_GROTTO) >= 24) && (var(VAR_ROUTE14_GROTTO) <= 27)){
        finditem(ITEM_FIRE_STONE)
    }
    if((var(VAR_ROUTE14_GROTTO) >= 28) && (var(VAR_ROUTE14_GROTTO) <= 31)){
        finditem(ITEM_THUNDER_STONE)
    }
    if((var(VAR_ROUTE14_GROTTO) >= 32) && (var(VAR_ROUTE14_GROTTO) <= 35)){
        finditem(ITEM_WATER_STONE)
    }
    if((var(VAR_ROUTE14_GROTTO) >= 36) && (var(VAR_ROUTE14_GROTTO) <= 39)){
        finditem(ITEM_LEAF_STONE)
    }
    waitfanfare
    waitmessage
    closemessage
    release
    end
}

script ROUTE14_GrottoPokemon{
    lockall
    if((var(VAR_ROUTE14_GROTTO) >= 40) && (var(VAR_ROUTE14_GROTTO) <= 51)){
        playmoncry(SPECIES_KLEFKI, CRY_MODE_ENCOUNTER)
        delay(40)
        waitmoncry
        setwildbattlelevelrange(SPECIES_KLEFKI, 30, ITEM_NONE, SPECIES_NONE, 33)
    }
    if((var(VAR_ROUTE14_GROTTO) >= 52) && (var(VAR_ROUTE14_GROTTO) <= 63)){
        playmoncry(SPECIES_TOXEL, CRY_MODE_ENCOUNTER)
        delay(40)
        waitmoncry
        setwildbattlelevelrange(SPECIES_TOXEL, 30, ITEM_NONE, SPECIES_NONE, 33)
    }
    if((var(VAR_ROUTE14_GROTTO) >= 64) && (var(VAR_ROUTE14_GROTTO) <= 75)){
        playmoncry(SPECIES_TOGEPI, CRY_MODE_ENCOUNTER)
        delay(40)
        waitmoncry
        setwildbattlelevelrange(SPECIES_TOGEPI, 30, ITEM_NONE, SPECIES_NONE, 33)
    }
    if((var(VAR_ROUTE14_GROTTO) >= 76) && (var(VAR_ROUTE14_GROTTO) <= 87)){
        playmoncry(SPECIES_INKAY, CRY_MODE_ENCOUNTER)
        delay(40)
        waitmoncry
        setwildbattlelevelrange(SPECIES_INKAY, 30, ITEM_NONE, SPECIES_NONE, 33)
    }
    if((var(VAR_ROUTE14_GROTTO) >= 88) && (var(VAR_ROUTE14_GROTTO) <= 99)){
        playmoncry(SPECIES_DRAMPA, CRY_MODE_ENCOUNTER)
        delay(40)
        waitmoncry
        setwildbattlelevelrange(SPECIES_DRAMPA, 30, ITEM_NONE, SPECIES_NONE, 33)
    }
    setflag(FLAG_SYS_CTRL_OBJ_DELETE)
    dowildbattle
    clearflag(FLAG_SYS_CTRL_OBJ_DELETE)
    setflag(FLAG_DAILY_ROUTE14_GROTTO)
	goto(Common_EventScript_RemoveStaticPokemon)
    release
    end
}
